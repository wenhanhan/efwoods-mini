/* pages/news/news.wxss */
@import '/icon/clean.wxss';
@import '/icon/right_nav.wxss';
@import '/icon/no_notice.wxss';
.top_bk{
  width: 100%;
  height: 140rpx;
  position: fixed;
  top: 0;
  background-image: linear-gradient(to bottom,#FF4E4D , #FFA57C);
  z-index: 2;
}
.white_bk{
  width: 100%;
  height: 305rpx;
  background: white;
  position: fixed;
  z-index: 1;
  top: 0;
}
.news_nav{
  width: 94%;
  height: 170rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: white;
  position: fixed;
  top: 44rpx;
  border-radius: 16rpx;
  z-index: 3;
  box-shadow: 0px 4px 5px #EEEEEE;
}
.news_nav_item{
  width: 33%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 26rpx;
  color: #3F3F3F;
}
.news_nav_item image{
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
}
.clean_box{
  width: 100%;
  height: auto;
  position: fixed;
  top:220rpx;
  background: white;
  border-bottom: 8rpx solid #EEEEEE;
  z-index: 2;
}
.clean_line{
  width: 92%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #8B8B8B;
  margin: 0 auto;
}
.clean{
  width: auto;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right:2%;
}
.news_box{
  width: 100%;
  height: auto;
  display: flex;
  overflow-x: hidden;
  top:308rpx;
  align-items: flex-end;
  flex-direction: column;
  position: absolute;
}
.news_item{
  width: 95%;
  height: 140rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  border-bottom: 1px solid #E6E6E6;
  transition: all 0.3s;
}
.news_item.status{
  left: -140rpx;
}
.news_logo{
  width: 13%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.news_logo image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}
.news_des{
  width: 82%;
  height: 80%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  flex-direction: column;
  padding-left:10rpx; 
}
.news_title{
  width: 100%;
  height: 50%;
  color: #454545;
  display: flex;
  font-size: 28rpx;
  justify-content: space-between;
  align-items: center;
}
.news_content{
  width: 100%;
  height: 50%;
  font-size: 24rpx;
  color: #7E7E7E;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.news_time{
  font-size:20rpx;
  color: #8B8B8B;
}
.news_dot{
  width: auto;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 4%;
  bottom: 20rpx;
}
.dot{
  width: 12rpx;
  height: 12rpx;
  background: #FC0202;
  border-radius: 8rpx;
  margin-right: 12rpx;
}
.news_item .del-button{
  width: 140rpx;
  height: 100%;
  position: absolute;
  right: -140rpx;
  background: red;
  transition: all 0.3s;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}