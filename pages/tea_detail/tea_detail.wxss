/* 教练简介头部样式 */
page{
  background: #F8F8F8;
}
.container{
  padding-bottom: 130rpx;
}
.tea_top{
  width: 100%;
  height: 260rpx;
  display: flex;
  justify-content: center;
  position: relative;
  /* padding-top: 30rpx; */
}
.tea_top image{
  width: 100%;
  height: 100%;
