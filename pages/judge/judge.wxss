}
.weui-uploader__bd{
  margin-top: 10px;
}
.weui-uploader__hd{
 float: left;
 height: 80px;
 position: relative;
 align-items: flex-end;
}
.rate{
  width: 100%;
  height: 86rpx;
  display: flex;
  align-items: center;
  background: white;
  font-size: 28rpx;
