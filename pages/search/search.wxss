.search_box{
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.input_box{
  width: 90%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cancel{
  width: 10%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: blue;
}
.start_search_box{
  width: 95%;
  height: 90%;
  position: relative;
  border-radius: 20px;
  background-color:#f6f4f4;
  font-size: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666666;
}
.start_search{
  width: 90%;
  height: 90%;
  position: relative;
  display: flex;
  border-radius: 20px;
  background-color:#f6f4f4;
  font-size: 26rpx;
  color: #666666;
}
.placeholderStyle{
  font-size: 26rpx;
  color: #797676;
  /* margin-left: 50rpx; */
}
.search_icon{
  widows: 10%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.hot_search{
  width: 100%;
  height: auto;
  margin-top: 30rpx;
  margin-left: 40rpx;
  font-size: 26rpx;
  color: #666666;
  float: left;
  position: relative;
}
.hot_btn_line{
  width: 100%;
  height: 40rpx;
  display: flex;
  margin-top: 20rpx;
  margin-left: 40rpx;
  justify-content: flex-start;
  align-items: center;
}
.hot_btn{
  width: auto;
  height: 100%;
  background: #f7f5f5;
  border-radius: 20rpx;
  padding: 2rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  margin: 0 8rpx;
}

/* 搜索结果样式 */

 .search_list{
   width: 95%;
   height: 232rpx;
   display: flex;
   justify-content: center;
   align-items: center;
   position: relative;
   border-bottom: 1rpx solid #eeeeee;
 }

 .search_list_left{
   width: 26%;
   height: 100%;
   display: flex;
   justify-content: flex-start;
   align-items: center;
   position: relative;
 }

 .search_list_right{
   width: 73%;
   height: 100%;
   display: flex;
   justify-content: center;
   flex-direction: column;
   /* align-items: center; */
   position: relative;
 }
 .search_img_box{
    width: 82%;
   height: 65%;
   /* margin: 0 auto; */
  display: flex;
  justify-content: center;
  align-items: center;
 }
 .search_img_box image{
   width: 100%;
   height: 100%;
   border-radius: 20rpx;
 }