/* pages/ability_test_des/ability_test_des.wxss */
page{
  background:rgba(253, 141, 50, .32);
}
.bk{
  width: 100%;
  height: 376rpx;
  position:absolute;
  top: 0;
  background: #FE8711;
}
.title{
  width: 100%;
  height: auto;
  font-size: 44rpx;
  color: white;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
  z-index: 999;
}
.content{
  width: 90%;
  height: 900rpx;
  background: white;
  border-radius: 28rpx;
  margin-top: 68rpx;
  z-index: 999;
  position: relative;
  display: flex;
  justify-content: center;
}
.deco{
  width: 442rpx;
  height: 84rpx;
  position: absolute;
  top: -32rpx;
}
.content image{
  width: 100%;
  height: 100%;
}
.progress{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;
  font-size: 32rpx;
  color: #444444;
}
.topic{
  width: 85%;
  height: auto;
  display: flex;
  /* justify-content: center; */
  align-items: flex-start;
  flex-direction: column;
  margin-top:100rpx ;
}
.topic_title{
  width: 100%;
  height: auto;
  font-size: 36rpx;
  font-weight: 600;
  color: #444444;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  word-wrap: break-word;
}
.answer{
  width: 98%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin-top: 30rpx;
}
.answer .item{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #444444;
  border-bottom: 1px solid #eeeeee;
}
.check{
  width: 24rpx;
  height: 24rpx;
  border-radius: 24rpx;
  background: white;
  border: 8rpx solid #FF6A00;
}
.on{
  width: 24rpx;
  height: 24rpx;
  border-radius: 24rpx;
  background: #FF6A00;
}
.feedback{
  width: 100%;
  height: auto;
  display: flex;
  margin-top: 160rpx;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  color: #FE8711;
}
.feedback image{
  width:44rpx;
  position: relative;
  height: 44rpx;
  margin-right: 14rpx;
  top: 0;
}
swiper{
  width: 100%;
}