/* pages/daily_exercise/daily_exercise.wxss */
@import '/icon/noresource.wxss';
page{
  background-color: white;
}
swiper{
  width: 100%;
  min-height: 600rpx;
}
.top_box{
  width: 100%;
  height: 318rpx;
  position: relative;
}
.top_box image{
  width: 100%;
  height: 100%;
}
.swiper-tab{
  width: 100%;
  background: white;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
}
.swiper-tab-fix{
  width: 100%;
  background: white;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
  position: fixed;
  top: 0;
  z-index: 999;
}
.swiper-tab-item{
  display: inline-block;
  width: auto;
  color:#030303;
  font-size: 30rpx;
}
.active{
  color:#000000;
  font-size: 36rpx;
  font-weight: 500;
  border-bottom: 4rpx solid #8E62FF;
}
.grade{
  width: 100%;
  height: auto;
  padding:0 24rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 24rpx;
  box-sizing: border-box;
}
.grade_fix{
  width: 100%;
  height: 85rpx;
  padding:24rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  /* padding-top: 24rpx; */
  box-sizing: border-box;
  position: fixed;
  top: 88rpx;
  background: white;
  z-index: 999;
}
.grade_title{
  width: 20%;
  font-size: 30rpx;
  color: #1D1D1D;
  width: 70rpx;
  font-weight: 500;
}
.grade_item_box{
  width: 85%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  overflow: auto;
  overflow: -moz-scrollbars-none;
  overflow-x: auto;
}
.grade_item_box::-webkit-scrollbar{
  display: none;
}
.grade_item{
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  background: #EAEAEA;
  color:#1D1D1D;
  text-align: center;
  font-size: 20rpx;
  margin-right: 24rpx;
  padding: 0 12rpx;
  /* flex布局 子元素不被压缩 */
  flex-shrink: 0;
}
.selected{
  background: rgba(204, 184, 255, .45);
  color:#8E62FF;
  border: 1px solid #8E62FF;
}
.video_box{
  width: 100%;
  height: auto;
  padding: 0 24rpx;
  position: relative;
  box-sizing:border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}
.video_item{
  width: 338rpx;
  height: 184rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
  position: relative;
}
.video_item image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.video_info{
  width: 100%;
  height: auto;
  position:absolute;
  bottom: 4rpx;
  left: 20rpx;
  color: white;
}
.video_title{
  font-size: 32rpx;
  font-weight: 600;
}
.video_time_num{
  font-size: 22rpx;
  font-weight: 500;
  margin-top: 6rpx;
}
.start_line{
  width: 8rpx;
  height: 36rpx;
  background: #8E62FF;
  margin-right: 4rpx;
  /* border-radius: 10rpx; */
}
.nodata{
  padding-top:100rpx ;
}