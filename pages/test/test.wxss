/* 生成海报 */
.imagePathBox{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7);
  position: fixed;
  display: flex;
  justify-content: center;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}
.shengcheng{
  width: 76%;
  height: 70%;
  position: fixed;
  top: 100rpx;
  left: 50%;
  margin-left: -38%;
  z-index: 1001;
}
.baocun{
  /* display: block; */
  width: 250rpx;
  height: 70rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 10%;
  /* left: 10%; */
  background-image: linear-gradient(to right,#FFDD2B , #FFF056);
  color: black;
  font-size: 26rpx;
  border-radius: 44rpx;
  z-index: 1001;
}
button[class="baocun"]::after{
  border: 0;
}
