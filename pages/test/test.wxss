/* pages/test/test.wxss */
@import '/icon/pingce.wxss';
@import '/icon/pingce_share.wxss';
page{
  background: #FFDD2B;
}
.container{
  overflow-x: hidden;
}
.content_box{
  width: 86%;
  height: 80%;
  background: white;
  position: absolute;
  margin-top: 60rpx;
  border-radius: 16rpx;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  flex-direction: column;
}
.title{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}
.title image{
  width: 320rpx;
  height: 52rpx;
}
.test_num{
  width: 100%;
  height: auto;
  font-size: 22rpx;
  color: #838383;
  display: flex;
  justify-content: center;
  align-items: center;
}
.banner{
  width: 560rpx;
  height: 270rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* margin: 0 auto; */
  margin:15rpx auto;
}
.banner image{
  width: 100%;
  height: 100%;
  border-radius: 14rpx;
}
.pingce_des{
  width: 560rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  color: #0D0D0D;
  margin: 0 auto;
}
.pingce_des text{
  text-indent: 2em;
}
.option_btn{
  width: 90%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: 80rpx;
  margin: 0 auto;
}
.share{
  width: 260rpx;
  height: 100%;
  font-size: 28rpx;
  color: #0D0D0D;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FCF8D3;
  border: 1px solid #FFDD2B;
}
.start{
  width: 260rpx;
  height: 100%;
  font-size: 28rpx;
  color: #0D0D0D;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FFDD2B;
}
