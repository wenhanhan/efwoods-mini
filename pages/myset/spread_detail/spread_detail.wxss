/* pages/myset/spread_detail/spread_detail.wxss */
@import '/icon/brokerage.wxss';
@import '/icon/lost.wxss';
.container{
  overflow-x: hidden;
  padding-bottom: 30rpx;
}
.top_bk{
  width: 100%;
  height: 280rpx;
  position: relative;
  background-image:url('https://cdn.icloudapi.cn/spread_top_bg.png'); 
  background-repeat:no-repeat;background-size:100% 100%;
  display: flex;
  justify-content: center;
  align-items:center;
}
.brokerage_title{
  width: 90%;
  height: 50%;
  display: flex;
  justify-content:center;
  flex-direction: column;
  margin: 0 auto;
}
.brokerage_title .title{
  font-size: 28rpx;
  height: 50%;
  color: white;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.brokerage_sum{
  font-size: 52rpx;
  color: white;
  height: 50%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.brokerage_icon{
  width: auto;
  height: auto;
  position: absolute;
  right: 52rpx;
  bottom: 70rpx;
}
/* 明细 */
.brokerage_detail,.brokerage_item{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.brokerage_month{
  width: 100%;
  height: 66rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #eeeeee;
  /* font-size: 22rpx;
  color: #6A6A6A; */
  font-size: 28rpx;
  color: #6A6A6A;
  padding-left: 5%;
}
.month_item{
  width: 100%;
  padding-left: 5%;
  height: 100rpx;
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-bottom: 1px solid #eeeeee;
}
.item_title{
  width: 100%;
  height: 60%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  color: #3F3D3D;
}
.item_time{
  width: 100%;
  /* height: 30%; */
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size:22rpx;
  color:#969595;
}
.item_num{
  font-size: 30rpx;
  color: #FF1C2A;
  position: absolute;
  right: 50rpx;
}