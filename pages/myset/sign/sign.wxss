@import '/icon/scan.wxss';
page{
  background-color: #eeeeee;
}
.container{
  font-family: Microsoft YaHei;
}
.sign_list{
  width: 92%;
  height: 170rpx;
  margin: 0 auto;
  margin-top: 25rpx;
  background: white;
   border-radius: 10rpx;
  position: relative;
  display: flex;
  justify-content: center;
}
.sign_left{
  width: 55%;
  height: 100%;
  position: relative;
  background: linear-gradient(to right,#EB4D4D,#FFEDED);
  border-radius: 10rpx;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.sign_right{
  width: 46%;
  height: 100%;
  position: relative;
  background: white;
  display: flex;
  justify-content: center;
  align-content: center;
  flex-direction: column;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.tea,.class{
  width: 90%;
  height: 30%;
  position: relative;
  font-size: 24rpx;
  color: white;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  overflow: hidden;
}
.title{
  width: 90%;
  height: 30%;
  font-weight: normal;
  position: relative;
  font-size: 28rpx;
  color: white;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.name{
  width: 100%;
  height: 40%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  color: black;
  text-indent: 16rpx;
  overflow: hidden;
}
.date{
  width: 100%;
  height: 40%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 20rpx;
  color: black;
  text-indent: 16rpx;
  overflow: hidden;
}
.nosign{
  width: 92%;
  height: 200rpx;
  margin: 0 auto;
  line-height: 200rpx;
  background: white;
  border-radius: 10rpx;
  margin-top: 25rpx;
  position: relative;
  text-align: center;
  font-size: 28rpx;
  color: #5C5C5C;
}
/* 扫码按钮样式1 */

.scan{
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background: white;
  border: 1px solid #eeeeee;
  position: fixed;
  right: 12rpx;
  bottom: 400rpx;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.scan image{
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
  position: relative;
}
.tab{
  width: 100%;
}
.signMonth{
  width: 130rpx;
  height: 50rpx;
  border-top-right-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
  background: #EB4D4D;
  font-size: 28rpx;
  color: white;
  font-weight: 500;
  position: relative;
  left: 0;
  margin-top: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}