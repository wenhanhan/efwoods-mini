/* pages/daily_exercise_des/daily_exercise_des.wxss */
.container{
  padding-bottom: 96rpx;
}
.video_banner{
  width: 100%;
  height: 360rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  background-image: url('https://cdn.icloudapi.cn/pingban.png');
  background-size: cover;
  background-repeat: no-repeat;
}
.play{
  width: 72rpx;
  height: 72rpx;
}
.video_info{
  width: 100%;
  height: auto;
  padding: 18rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.video_title{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 56rpx;
  color: white;
  font-weight: 600;
  top: 46rpx;
  position:absolute;
}
.video_prop{
  width: 90%;
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.video_prop_item{
  width: auto;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.item1{
  font-size: 28rpx;
  color: #232323;
  font-weight: 600;
}
.item2{
  font-size: 24rpx;
  color: #5A5A5A;
}
.content{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  padding: 0 24rpx;
  box-sizing: border-box;
  border-bottom: 15rpx solid #eeeeee;
}
.content_title{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 32rpx;
  color: #232323;
  font-weight: 600;
  position: relative;
}
.content_box{
  width: 100%;
  height: auto;
  float: left;
  /* position: relative; */
  background: white;
  margin-bottom: 20rpx;
}
.scroll-course{
  width: 270rpx;
  height: 172rpx;
  float: left;
  /* margin-top: 20rpx; */
  margin-bottom: 15rpx;
  white-space: nowrap;
  position: relative;
}
.img_box{
  width: 270rpx;
  height: 172rpx;
  margin-right: 15rpx;
  display: inline-block;
  position: relative;
  border-radius: 10rpx;
}
.img_box image{
  width: 100%;
  height: 100%;
}
.child_info{
  width: 90%;
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  bottom: 10rpx;
  position: absolute;
  padding-left: 16rpx;
}
.child_title{
  width: 180rpx;
  font-size: 24rpx;
  color: white;
  font-weight: 600;
  overflow: hidden;
}
.child_time{
  width: auto;
  font-size: 20rpx;
  color: white;
  margin-left: 20rpx;
}
.video_intro{
  width: 100%;
  height: auto;
  line-height: 150%;
  background:#F7F7F7;
  border-radius: 4rpx;
  font-size: 24rpx;
  color:#3B3B3B;
  text-indent: 2em;
  padding: 15rpx 16rpx;
  box-sizing: border-box;
}
/* 评论区 */
.discuss{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  background: white;
  display: flex;
  padding: 0 24rpx;
  flex-direction: column;
  align-items: center;
}
.more{
  width: 18rpx;
  height: 30rpx;
  position: absolute;
  right:40rpx;
}
.discuss_num{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #575757;
}
.discuss_input{
  width: 100%;
  height: 60rpx;
  margin:30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.head_img{
  width: 10%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.discuss_input image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
.discuss_input .input{
  width: 90%;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #B8B8B8;
  text-align: left;
  padding-left: 30rpx;
  margin-left: 15rpx;
  border-radius: 32rpx;
  background: #FBFBFB;
  border: 1px solid #F0F0F0;
}
.discuss_content{
  width: 100%;
  height: auto;
  display: flex;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}
.discuss_content_item{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  border-bottom: 1px solid #F0F0F0;
  margin-bottom: 20rpx;
}
.discuss_content_item_left{
  width: 10%;
  height: 76rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background: gray; */
}
.discuss_content_item_left image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
.discuss_content_item_right{
  width: 90%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  padding-left: 16rpx;
  align-items: center;
  flex-direction: column;
  margin-bottom: 22rpx;
}
.discuss_content_item_right_top{
  width: 100%;
  height:76rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.discuss_content_item_right_bottom{
  width: 100%;
  height: auto;
  display: flex;
  margin-top: 12rpx;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.username{
  width: auto;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: center;
  font-size: 26rpx;
  color: #525252;
}
.time{
  font-size: 20rpx;
  color: #9B9B9B;
}
.icon{
  width: auto;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.icon image{
  width: 32rpx;
  height: 32rpx;
}
.discuss_content_item_right_bottom_text{
  width: 100%;
  height: auto;
  display: flex;
  font-size:26rpx;
  color: #252525;
}
.discuss_content_item_right_bottom_repaly{
  width: 100%;
  height:auto ;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-top: 16rpx;
  padding:14rpx;
  box-sizing: border-box;
  background: #F7F7F7;
  font-size: 24rpx;
  color: #252525;
  border-radius: 4rpx;
}
.all_discuss{
  font-size: 24rpx;
  font-weight: 500;
  color: #FE8711;
  margin-top: 8rpx;
}
.start{
  width: 100%;
  height: 96rpx;
  display: flex;
  position:fixed;
  bottom: 0;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: white;
  font-weight: 500;
  background: #FE8711;
}