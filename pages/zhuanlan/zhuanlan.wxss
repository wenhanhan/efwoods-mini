/* pages/zhuanlan/zhuanlan.wxss */
@import '/icon/lock.wxss';
@import '/icon/player_start.wxss';
@import '/icon/pingce_share.wxss';
.top_bk{
  width: 100%;
  height: 270rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top_bk image{
  width: 100%;
  height: 100%;
}
.tea_info{
  width: 540rpx;
  height: 256rpx;
  position: relative;
  top: -90rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 0  6rpx 2rpx #D7D4D4;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  /* position: relative; */
}
.tea_info image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  position: absolute;
  top: -75rpx;
  border: 8rpx solid white;
}
.tea_name{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #515151;
  font-weight: 500;
  position: absolute;
  top: 85rpx;
}
.sub_like{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  top: 150rpx;
}
.sub,.like{
  width: 200rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 24rpx;
  color: #A0A0A0;
  background: #FFDBCF;
  border-radius: 16rpx;
}
.sub_num,.like_num{
  font-size: 36rpx;
  color: #515151;
  font-weight: 500;
}
.zhuanlan_content{
  width: 100%;
  height: auto;
  /* display: flex; */
  justify-content: center;
  align-items: center;
  position: relative;
  top: -75rpx;
  padding-bottom: 40rpx;
}
.zhuanlan_des{
  width: 90%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #474747;
  margin: 0 auto;
  padding-top: 25rpx;
}
.zhuanlan_audio{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 0 auto;
}
.audio_item{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 26rpx;
  color: #363636;
  border-bottom: 1px solid #DEDEDE;
  position: relative;
  padding-left: 10%;
}
.audio_title{
  width: 70%;
  position: relative;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.sub_state{
  width: auto;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 8%;
}
.dingyue{
  width: 100%;
  height: 86rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: white;
  font-weight: 500;
  background: #FF5800;
}
/* 跳转商城 */
.share{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: white;
  position: fixed;
  right: 20rpx;
  bottom: 250rpx;
  z-index: 999;
  display: flex;
  flex-direction: column;
  color: white;
  font-size: 16rpx;
  align-items: center;
  justify-content: center;
  /* border: 1px solid #eeeeee; */
  box-shadow: 0 0  6rpx 2rpx #D7D4D4;
}

/* 生成海报 */
.imagePathBox{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7);
  position: fixed;
  display: flex;
  justify-content: center;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}
.shengcheng{
  width: 80%;
  height: 80%;
  position: fixed;
  top: 100rpx;
  left: 50%;
  margin-left: -40%;
  z-index: 1001;
}
.baocun{
  width: 250rpx;
  height: 70rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 5%;
  /* left: 10%; */
  background-image: linear-gradient(to right,#FFDD2B , #FFF056);
  color: black;
  font-size: 26rpx;
  border-radius: 44rpx;
  z-index: 1001;
}
button[class="baocun"]::after{
  border: 0;
}
