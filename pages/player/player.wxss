/* pages/player/player.wxss */
@import '/icon/prev.wxss';
@import '/icon/next.wxss';
@import '/icon/stop.wxss';
@import '/icon/mp3_play.wxss';
@import '/icon/mp3_love.wxss';
@import '/icon/mp3_judge.wxss';
@import '/icon/mp3_share.wxss';
.top_bk{
  width: 100%;
  height: 620rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
}
.top_bk image{
  width: 470rpx;
  height: 470rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mp3_info{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.title,.author{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cut_title{
  width: 70%;
  height: auto;
  font-size: 32rpx;
  color: #494949;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center;
}
.cut_author{
  width: 50%;
  height: auto;
  font-size: 26rpx;
  color: #676767;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center;
  margin-top: 10rpx;
}
.jindu{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  margin-top: 80rpx;
  align-items: center;
}
slider{
  width: 70%;
  margin: 0 auto;
}
.left_time,.right_time{
  width: 15%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #808080;
}
.control{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-top: 100rpx;
}
.left,.right{
  width: auto;
  height: auto;
  display: flex;
  justify-content: center;
  text-align: center;
}
.middle{
  width: 360rpx;
  height: auto;
  display: flex;
  justify-content: center;
  text-align: center;
}
.middle_circle{
  width: 84rpx;
  height: 84rpx;
  display: flex;
  justify-content: center;
  text-align: center;
  border-radius: 50%;
  border: 6rpx solid #F36308;
}
.bottom_btn{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 20rpx;
}
button{
  padding: 0;
  background: white;
}
.share_box{
  width: 33%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 生成海报 */
.imagePathBox{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7);
  position: fixed;
  display: flex;
  justify-content: center;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}
.shengcheng{
  width: 80%;
  height: 80%;
  position: fixed;
  top: 100rpx;
  left: 50%;
  margin-left: -40%;
  z-index: 1001;
}
.baocun{
  width: 250rpx;
  height: 70rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 5%;
  /* left: 10%; */
  background-image: linear-gradient(to right,#FFDD2B , #FFF056);
  color: black;
  font-size: 26rpx;
  border-radius: 44rpx;
  z-index: 1001;
}
button[class="baocun"]::after{
  border: 0;
}
