/* pages/show/show.wxss */
@import '/icon/play.wxss';
@import '/icon/fresh.wxss';
@import '/icon/novideo.wxss';
@import '/icon/sousuo.wxss';
page{
  background-color: white;
}

.headimg{
  width: 100%;
  height: 100%;
}

.show_btn{
  width: 86rpx;
  height: 86rpx;
  border-radius: 45rpx;
  background: white;
  box-shadow: 0 0  6rpx 2rpx #D7D4D4;
  /* opacity: 0.62; */
  position: fixed;
  right: 12rpx;
  bottom: 200rpx;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.fresh_btn{
  width: 80rpx;
  height: 80rpx;
  border-radius: 45rpx;
  /* border: 1px solid gray; */
  background: white;
  /* opacity: 0.62; */
  position: fixed;
  right: 12rpx;
  bottom: 310rpx;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0  6rpx 2rpx #D7D4D4;
}
.show_btn image{
   width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
  position: relative;
}

/* 瀑布流布局 */
.video_box{
  width: 100%;
  height: auto;
  top: 150rpx;
  background: #F8F9FB;
  display: flex;
  justify-content: center;
  position: relative;
  padding-bottom: 60rpx;
}
.img_item {
  width: 47%;
  margin: 1%;
  display: inline-block;
  vertical-align: top;
  /* position: relative; */
}
.img_box{
  width: 100%;
  position: relative;
  margin-bottom: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.img_box image{
  max-height: 450rpx;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}
.headimg_box{
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  top: -32rpx;
  left: 24rpx;
  display: flex;
  justify-content: center;
  border-radius: 40rpx;
  border: 1px solid white;
  align-items: center;
  overflow: hidden;
}
.video_title{
  width: 90%;
  height: auto;
  font-weight: 500;
  /* margin-top: 42rpx; */
  margin-top: 50rpx;
  font-size: 24rpx;
  font-family: simhei;
  color: #3B3939;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}
.video_des{
  width: 100%;
  min-height: 50rpx;
  background: white;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  padding-bottom: 14rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  box-shadow: 2px 2px 5px #EEEEEE;
}
.video_hot{
  width: 90%;
  height: 32rpx;
  margin-top: 14rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.video_favor{
  width: auto;
  height: 100%;
  /* position: absolute; */
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #7F7F7F;
}
.favor_num{
  position: absolute;
}
.video_favor image{
  width: 30rpx;
  height: 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: absolute;
  left: 0;
}
.play{
 /* width: 90%; */
 width: auto;
 height: 100%;
 position: absolute;
 right: 0;
 display: flex;
 justify-content: center;
 align-items: center;
}
.play .img{
  width: 26rpx;
  height:26rpx;
}
.play .play_times{
  color: #595959;
  font-size: 20rpx;
  margin-left: 10rpx;
}
.name{
  position: absolute;
  top:0px;
  left: 100rpx;
  width: 60%;
  height: auto;
  color: gray;
  font-size: 20rpx;
  /* 超出省略 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* 重新加载动画 */
.fresh{
  width: 100%;
  height: 80rpx;
  position: fixed;
  background: white;
  top: 150rpx;
}
/* 滑动导航 */
.tab_box{
  width: 100%;
  height: 150rpx;
  background: white;
  display: flex;
  top: 0;
  position: fixed;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index: 999;
  box-shadow: 0 0  6rpx 2rpx #eeeeee;
}
.search{
  width: 90%;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  font-size: 26rpx;
  background: #eeeeee;
  color: #ADADAD;
}
.tab{
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}
.cur_item{
  width: 15%;
  height: 100%;
  /* font-size: 24rpx; */
  font-size: 26rpx;
  color: #535252;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.cur_line{
  width: 42rpx;
  height: 2px;
  background: #FF0000;
}
.selected{
  color: #3A3A3A;
  font-weight: 600;
  font-size: 26rpx;
}
/* 暂无更多数据 */
.noMoreData{
  width: 100%;
  height: 20rpx;
  bottom: 50rpx;
  background: #F8F9FB;
  font-size: 24rpx;
  color: #CBCCCD;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
}
.line{
  width: 180rpx;
  background: #eeeeee;
  height: 1px;
}