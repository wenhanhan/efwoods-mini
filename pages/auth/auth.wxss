}
.container {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  /* opacity: 0.5; */
}
.top_box{
  width: 100%;
  height: auto;
  display: flex;
  justify-content:center ;
  align-items: center;
  margin-top: 180rpx;
}
.top_box image{
  width: 610rpx;
  height: 562rpx;
}
.intro{
  width: 100%;
  height: auto;
  display: flex;
  margin-top: 30rpx;
  justify-content: center;
  align-items: center;
