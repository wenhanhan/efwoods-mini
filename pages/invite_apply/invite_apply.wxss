.cell_line{
  width: 100%;
  float: left;
  position: relative;
  margin-top: 20rpx;
}
.button-sp-area{
    margin: 0 auto;
    padding-top: 15px;
    width: 60%;
}
.mini-btn{
    margin-right: 5px;
}
.apply_btn{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.save_btn{
  width: 100%;
  height: 100%;
  background: black;
  border-radius: 40rpx;
  line-height: 80rpx;
  color: #f2d11b;
  font-size: 28rpx;
}
/* 上传框样式 */

.weui-uploader{
  width: 100%;
  float: left;
  position: relative;
  background: white;
  border-top: 1px solid #eeeeee;
  font-size: 28rpx;
}
.weui-uploader__hd{
  padding-bottom: 0;
  padding-left: 15px;
  padding-top: 12px;
}
.weui-uploader__bd{
  margin-left:30rpx;
  margin-top:30rpx;
}
.delete{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.weui-uploader__file{
  position: relative;
}
.agree{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: flex-start;
}
.ag_label{
  background: #eeeeee;
}

form{
  width: 100%;
  margin: 0 auto;
  position: relative;
}