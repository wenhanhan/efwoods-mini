/* pages/sports_event_des/sports_event_des.wxss */
page{
  background:#eeeeee;
}
.container{
  padding-bottom: 160rpx;
}
.sports_bk{
  width: 100%;
  height: 328rpx;
  position: relative;
}
.sports_bk image{
  width: 100%;
  height: 100%;
}
.sports_info{
  width: 100%;
  height: auto;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.sports_info_top{
  width: 100%;
  height: 286rpx;
  display: flex;
  padding: 0 30rpx;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background: white;
  margin-top: -120rpx;
  z-index: 999;
  border-radius: 16rpx;
}
.sports_info_bottom{
  width: 100%;
  height: auto;
  display: flex;
  padding: 0 30rpx;
  box-sizing: border-box;
  justify-content: flex-start;
  flex-direction: column;
  background: white;
  margin-top: 26rpx;
  border-radius: 16rpx;
}
.start_line{
  width: 8rpx;
  height: 36rpx;
  background: #005FFF;
  /* border-radius: 10rpx; */
}
.sports_title{
  width: 100%;
  height: 85rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 36rpx;
  color: #1F1F1F;
  font-weight: 600;
}
.sports_time_address{
  width: 90%;
  height: 196rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.sports_time_address_child{
  width: auto;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 26rpx;
  color:#1F1F1F;
  font-weight: 500;
}
.sports_time_address_child image{
  width: 64rpx;
  height: 64rpx;
}
.sports_time_address_text{
  font-size: 22rpx;
  margin-top:10rpx;
  margin-bottom: 14rpx;
  font-weight: normal;
}
.baoming{
  width: 700rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background:#0B73FF;
  border-radius: 12rpx;
  color: white;
  font-size: 28rpx;
  position: fixed;
  bottom: 44rpx;
}
.content{
  width: 95%;
  height: auto;
  padding-bottom: 20rpx;
  margin: 0 auto;
  position: relative;
}
