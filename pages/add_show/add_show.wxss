/* pages/add_show/add_show.wxss */
@import '/icon/show_address.wxss';
@import '/icon/right_bar.wxss';
.top_line{
  width: 100%;
  height: 14rpx;
  background: #F0EDED;
  position: relative;
}
.placeholder{
  font-size: 24rpx;
  color: #C7C3C3;
}
.video{
  width: 96%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  position: relative;
   margin: 0 auto;
  /* border-bottom: 1px solid #F0EDED; */
}
.add_address{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  position: relative;
  margin: 0 auto;
  padding-left: 2%;
  margin-top: 35rpx;
  border-top: 1px solid #F0EDED;
  border-bottom: 1px solid #F0EDED;
}
.show_address{
  width: 80%;
  height: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
 .show_address.act{
  font-size: 26rpx;
  color: #F67C7C;
}

/* 上传框样式 */

.weui-uploader{
  width: 100%;
  float: left;
  position: relative;
  background: white;
  border-top: 1px solid #eeeeee;
  font-size: 28rpx;
}
.weui-uploader__hd{
  padding-bottom: 0;
  padding-left: 15px;
  padding-top: 12px;
}
.weui-uploader__bd{
  margin-left:30rpx;
  margin-top:30rpx;
}
.delete{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.weui-uploader__file{
  position: relative;
}

.add_btn{
  width: 90%;
  height: 80rpx;
  border-radius: 50rpx;
  background: black;
  color: #f2d11b;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  position: fixed;
  margin: 0 auto;
  bottom: 20rpx;
}

/* 视频分类样式 */
.video_category{
  width: 96%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 22rpx;
  color: #686565;
  margin: 0 auto;
  margin-top: 20rpx;
}
.cate_item{
  width: 92rpx;
  height: 44rpx;
  background: #EEEEEE;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 4rpx;
  margin-left: 40rpx;
}
.active{
  width: 92rpx;
  height: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 4rpx;
  background: #F67C7C;
  color: white;
  margin-left: 40rpx;
}