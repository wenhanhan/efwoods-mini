/* pages/myset/signSet/signSet.wxss */
page{
  background-color: #eeeeee;
}
.container{
  font-family: Microsoft YaHei;
}
.sign_course{
  width: 92%;
  height: 170rpx;
  margin: 0 auto;
  margin-top: 25rpx;
  border-radius: 10rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background:#EB4D4D; */
  background: #f9f5eb;
}
.sign_left{
  width: 27%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.left_img{
  width: 74%;
  height: 80%;
  border-radius: 10rpx;
  background: black;
  position: relative;
}
.left_img image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.sign_right{
  width: 73%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.course_title{
  width: 100%;
  height: 35%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  color:black;
}
.sign_time{
  width: 100%;
  height: 40%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 22rpx;
  color: black;
}
.sign_code{
  width: 140rpx;
  height: 45rpx;
  border-radius: 25rpx;
  position: absolute;
  right: 36rpx;
  background: #EC5A5A;
  color: white;
  text-align: center;
  line-height: 45rpx;
  font-size: 22rpx;
  padding: 0;
  top: 35rpx;
}
.sign_record{
  width: 140rpx;
  height: 45rpx;
  border-radius: 25rpx;
  position: absolute;
  right: 36rpx;
  background: #EC5A5A;
  color: white;
  text-align: center;
  line-height: 45rpx;
  font-size: 22rpx;
  padding: 0;
  bottom: 35rpx;
}
.canvas{
  position: fixed;
  top: 0;
  left: 400px;
}