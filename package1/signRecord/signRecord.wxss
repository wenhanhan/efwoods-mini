/* pages/myset/signRecord/signRecord.wxss */
@import '/icon/sign.wxss';
@import '/icon/dianping.wxss';
@import '/icon/judged.wxss';
@import '/icon/rili.wxss';
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.weui-search-bar__cancel-btn{
  font-size: 14px;
  color: #666666;
}
.record_title{
  width: 90%;
  height: 70rpx;
  display: flex;
  /* justify-content: flex-start; */
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eeeeee;
  /* font-size: 24rpx; */
  position: relative;
  color: #333333;
  /* padding-left: 30rpx; */
}
.record_title_left{
  width: auto;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.select_date{
  font-size: 32rpx;
  font-weight: bold;
  color: #fb0000;
  position: absolute;
  margin: 0 auto;
  width: 100%;
  left: 0;
  right: 0;
  text-align: center;
}

.record_item{
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #333333;
  border-bottom: 1px solid #eeeeee;
}

.record_head{
  width: 20%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.sign_time{
  width: 35%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.record_nick{
   width: 25%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.sign_judge{
  width: 20%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.record_des{
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #333333;
  border-bottom: 1px solid #eeeeee;
}
.record_des image{
  width: 52rpx;
  height: 52rpx;
  border-radius: 26rpx;
}


/* 点评模态对话框 */
.toast-box {
    width: 100%;
    height: 100%;
    opacity: 1;
    position: fixed;
    top: 0px;
    display: flex;
    justify-content: center;
    margin: 0 auto;
    z-index: 999;
}
 
.toastbg {
    opacity: 0.2;
    background-color: black;
    position: absolute;
    width: 100%;
    min-height: 100vh;
}
 
.showToast {
    position: absolute;
    opacity: 1;
    width: 80%;
    /* margin-left: 15%; */
    margin-top: 40%;
}
 
.toast-title {
    padding-left: 5%;
    background-color: white;
    color: #333333;
    height: 75rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    border-top-right-radius: 16rpx;
    border-top-left-radius: 16rpx;
}
 
.toast-main {
    padding-top: 3vh;
    padding-bottom: 4vh;
    background-color: white;
    text-align: center;
}
 
.toast-input {
    margin-left: 5%;
    margin-right: 5%;
    border: 1px solid #ddd;
    padding-left: 2vh;
    padding-right: 2vh;
    padding-top: 1vh;
    padding-bottom: 1vh;
    font-size: 28rpx;
}
 
.toast-button {
    display: flex;
    border-top: 1px solid #ddd;
}
 
.button1 {
    width: 50%;
}
 
.button2 {
    width: 50%;
}
 
.button1 button {
    width: 100%;
    background-color: white;
    color: red;
    font-size: 30rpx;
    border-radius: 0px;
    border-bottom-left-radius: 16rpx;
    border-right: 1px solid #ddd;
}
 
.button2 button{
    width: 100%;
    background-color: white;
    color: black;
    font-size: 30rpx;
    border-radius: 0px;
    border-bottom-right-radius: 16rpx;
}
 
.picker {
    padding-top: 1vh;
    padding-bottom: 1vh;
}
.placeholder{
  font-size: 26rpx;
  color: #5d5c5c;
}
.nosign{
  width: 92%;
  height: 200rpx;
  margin: 0 auto;
  line-height: 200rpx;
  background: #F8F8F8;
  border-radius: 10rpx;
  margin-top: 25rpx;
  position: relative;
  text-align: center;
  font-size: 28rpx;
  color: #5C5C5C;
}
.weui-btn{
  margin: 0 auto;
  width: 50rpx;
  height: 50rpx;
  border: 1px solid #fb0000;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
}