/* pages/sports event/sports event.wxss */
@import '/icon/bar_address.wxss';
@import '/icon/sousuo.wxss';
@import '/icon/search.wxss';
@import '/icon/noresource.wxss';
.container{
  overflow-x: hidden;
}
.home_top_bar_box{
  width: 100%;
  height: 90rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background-color: #BFA24B; */
}
.home_top_bar{ 
  width: 100%;
  height: 90rpx;
  /* background-color: #bca05a; */
  background-color: #BAA5F9;
  position: fixed;
  display: flex;
  /* font-size: 24rpx; */
  justify-content: center;
  align-items: center;
  top: 0;
  z-index: 999;
}
.home_top_bar_left{
  width: 20%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:22rpx;
  color: white;
}
/* .home_address{
  padding-top: 16rpx;
} */
.home_search_box{
  width: 70%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.home_search{
  width: 100%;
  height: 52rpx;
  border-radius: 28rpx;
  background: white;
  font-size: 22rpx;
  color: #7E7E7E;
  display: flex;
  justify-content: center;
  align-items: center;
}

.home_top_bar_right{
  width: 10%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 头部色块 */
.top_bk{
  width: 100%;
  height: 240rpx;
  background: #BAA5F9;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  position: fixed;
  /* top: 90rpx; */
  z-index: -1;
  background-image: linear-gradient(to bottom,#BAA5F9 , #DBCFFB);
}
navigator{
  width: 100%;
  display: flex;
  height: auto;
  justify-content: center;
}
swiper{
  width: 95%;
  height: 336rpx;
  margin-top: 20rpx;
}
.agency_box{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background: white;
  padding: 0 24rpx;
}
.agency{
  width: 100%;
  height: 240rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  border-bottom: 1px solid #eeeeee;
}
.agency_img{
  width: 40%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.agency_img image{
  width: 260rpx;
  height: 190rpx;
  border-radius: 12rpx;
}
.agency_info{
  width: 60%;
  height: 190rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 0;
  align-items: center;
}
.agency_name,.agency_tag{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 36rpx;
  color: #0D0D0D;
  font-weight: 500;
}
.agency_tag{
  font-size: 24rpx;
  color: #626262;
  font-weight: normal;
}
.nodata{
  padding-top:100rpx ;
}