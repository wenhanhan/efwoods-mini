/* package3/news_des/news_des.wxss */
.container{
  padding-bottom: 60rpx;
  padding: 0 24rpx;
}
.top{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  position: relative;
  border-bottom: 1px solid #eeeeee;
  padding: 30rpx 0;
}
.top_title,.top_date{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #1F1F1F;
}
.top_date{
  font-size: 20rpx;
  color: #5B5B5B;
  margin-top: 10rpx;
  font-weight: normal;
}
.content{
  width: 100%;
  height: auto;
  padding: 20rpx 0;
  margin: 0 auto;
  position: relative;
}
.news_box{
  width: 100%;
  height: auto;
  display: flex;
  padding: 0 24rpx;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
  border-top: 12rpx solid #eeeeee;
  margin-top: 20rpx;
}
.news{
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #eeeeee;
}
.news_left{
  width: 20%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.news_left image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
}
.news_right{
  width: 80%;
  height: 130rpx;
  display: flex;
  align-items: flex-start;
  padding-left: 12rpx;
  position: relative;
}
.news_title{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  color: #2C2C2C;
  /* font-weight: 500; */
}
.date{
  width: auto;
  font-size: 24rpx;
  color: #989898;
  position: absolute;
  right: 30rpx;
  bottom: 0;
}