/* pages/sports event/sports event.wxss */
@import '/icon/bar_address.wxss';
@import '/icon/sousuo.wxss';
@import '/icon/search.wxss';
@import '/icon/noresource.wxss';
.container{
  overflow-x: hidden;
}
.home_top_bar_box{
  width: 100%;
  height: 90rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background-color: #BFA24B; */
}
.home_top_bar{ 
  width: 100%;
  height: 90rpx;
  /* background-color: #bca05a; */
  background-color: #005FFF;
  position: fixed;
  display: flex;
  /* font-size: 24rpx; */
  justify-content: center;
  align-items: center;
  top: 0;
  z-index: 999;
}
.home_top_bar_left{
  width: 20%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:22rpx;
  color: white;
}
/* .home_address{
  padding-top: 16rpx;
} */
.home_search_box{
  width: 70%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.home_search{
  width: 100%;
  height: 52rpx;
  border-radius: 28rpx;
  background: white;
  font-size: 22rpx;
  color: #7E7E7E;
  display: flex;
  justify-content: center;
  align-items: center;
}

.home_top_bar_right{
  width: 10%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 头部色块 */
.top_bk{
  width: 100%;
  height: 240rpx;
  background: #005FFF;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  position: fixed;
  top: 0;
  z-index: -1;
  background-image: linear-gradient(to bottom,#005FFF , #76C1FE);
}
navigator{
  width: 100%;
  display: flex;
  height: auto;
  justify-content: center;
}
swiper{
  width: 95%;
  height: 336rpx;
}
.content{
  width: 100%;
  height: auto;
  display: flex;
  /* padding: 0 24rpx; */
  box-sizing: border-box;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  background: white;
}
/* 内容区域 */
.tab-bar{
  height: 80rpx;
  width: 100%; 
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  border-bottom: 1px solid#eeeeee;
  /* background: #f7f7f7;  */
  font-size: 30rpx; 
  color: #030303;
  white-space: nowrap;
  position: relative;
  z-index: 99;
}
.tab-item{
  margin:0 36rpx;
  display: inline-block;
}
.tab-item.active{
  color: #4675f9;
  position: relative;
  font-weight: 500;
}
.tab-item.active:after{ 
  content: "";
  display: block;
  height: 8rpx;
  width: 52rpx;
  background: #4675f9;
  position: absolute; 
  bottom: 0;
  /* 居中 */
  left: 50%;
  transform: translateX(-50%);
  border-radius: 16rpx;
}
.item-ans{ 
  width: 100%;
  display: flex; 
  flex-grow: 
  row no-wrap;
  justify-content: space-between;
   padding: 30rpx;
   box-sizing: border-box; 
   height: 180rpx;
   align-items: center;
   border-bottom: 1px solid #f2f2f2;
  }

.tab-content{
  margin-top: 0;
  width: 100%;
  padding: 0 24rpx;
}
.scoll-h{
  height: 100%;
}
.sports{
  width: 100%;
  height: auto;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.sports_item{
  width: 100%;
  height: 390rpx;
  border-radius: 16rpx;
  display: flex;
  position: relative;
  margin-top: 26rpx;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background: white;
  border-bottom: 1px solid #eeeeee;
}
.status{
  width: 126rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position:absolute;
  right:0;
  top: 200rpx;
  border-top-left-radius: 24rpx;
  border-bottom-left-radius: 24rpx;
  background: #FF7200;
  color: white;
  font-size: 24rpx;
}
.hot{
  width: 68rpx;
  height: 32rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 12rpx;
  background: #FF7200;
  color: white;
  font-size: 18rpx;
}
.sports_item image{
  width: 100%;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  height: 270rpx;
}
.sports_info{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.sports_title{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #1F1F1F;
}
.sports_time{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  align-items: center;
  font-size: 24rpx;
  color: #636363;
}
.nodata{
  padding-top:100rpx ;
}