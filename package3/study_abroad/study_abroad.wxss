/* package3/study_abroad/study_abroad.wxss */
@import '/icon/noresource.wxss';
.container{
  overflow-x: hidden;
  /* padding: 0 24rpx; */
  padding-bottom: 60rpx;
}
/* 头部色块 */
.top_bk{
  width: 100%;
  height: 240rpx;
  background: #BAA5F9;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  position: absolute;
  top: 0rpx;
  z-index: -1;
  background-image: linear-gradient(to bottom,#BAA5F9 , #DBCFFB);
}
navigator{
  width: 100%;
  display: flex;
  height: auto;
  justify-content: center;
}
swiper{
  width: 95%;
  height: 336rpx;
  margin-top: 20rpx;
}
/* 按钮导航区域 */
.home_nav{
  width: 100%;
  /* height: 200rpx; */
  height: auto;
  padding-top: 8rpx;
  padding-bottom: 17rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  background: white;
}
.nav_item{
  width: 25%;
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  margin-top: 40rpx;
  font-size: 26rpx;
  color: #2F2F2F;
}
.nav_item image{
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 15rpx;
}
.start_line{
  width: 8rpx;
  height: 36rpx;
  background: #BAA5F9;
  /* border-radius: 10rpx; */
}
.sports_title{
  width: 100%;
  height: 95rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 36rpx;
  color: #1F1F1F;
  font-weight: 600;
  position: relative;
}
.more{
  width: auto;
  height: 100%;
  font-size: 24rpx;
  color: #303030;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 0;
  font-weight: normal;
}
.more image{
  width: 14rpx;
  height: 22rpx;
  margin-left: 10rpx;
  position: relative;
}
.padding_box{
  width: 100%;
  height: auto;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.content_box{
  width: 100%;
  height: auto;
  /* float: left; */
  /* position: relative; */
  background: white;
}
scroll-view{
  height: auto;
  display: flex;
  /* justify-content: flex-start; */
  align-items: flex-start;
  flex-wrap: nowrap;
  position: relative;
}
.img_box{
  width: 250rpx;
  height: auto;
  display: flex;
  margin-right: 30rpx;
  justify-content: center;
  align-items: center;
  flex-direction: column; 
}
.img_box image{
  width: 250rpx;
  height: 180rpx;
  border-radius: 10rpx;
  /* margin-top: 20rpx; */
}
.child_info{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
  padding-left: 16rpx;
}
.child_title{
  width: 100%;
  display: flex;
  height: 50rpx;
  justify-content: flex-start;
  /* align-items: center; */
  font-size: 30rpx;
  color: #2B2B2B;
  font-weight: 600;
  overflow: hidden;
}
.child_time{
  width: 100%;
  height: auto;
  font-size: 24rpx;
  color: #505050;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.tag{
  width: auto;
  /* height: 36rpx; */
  display: flex;
  justify-content: center;
  align-items: center;
}
.news_box{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}
.news{
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #eeeeee;
}
.news_left{
  width: 20%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.news_left image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
}
.news_right{
  width: 80%;
  height: 120rpx;
  display: flex;
  align-items: flex-start;
  padding-left: 12rpx;
  position: relative;
}
.news_title{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  color: #2C2C2C;
  font-weight: 500;
}
.date{
  width: auto;
  font-size: 24rpx;
  color: #989898;
  position: absolute;
  right: 30rpx;
  bottom: 0;
}
.nodata{
  height: 300rpx;
}
.tips{
  font-size:22rpx;
}