/* package3/summer_camp_des/summer_camp_des.wxss */
.top_pic{
  width: 100%;
  height: 340rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top_pic image{
  width: 100%;
  height: 100%;
}
.camp_intro{
  width: 100%;
  padding: 0 24rpx;
  padding-bottom: 25rpx;
  box-sizing: border-box;
  height: auto;
  display: flex;
  justify-content: flex-start;
  /* align-items: center; */
  flex-direction: column;
  border-bottom: 12rpx solid #eeeeee;
}
.camp_intro_top,.camp_intro_bottom{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top_left{
  width: 80%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
  position: relative;
  /* background: gray; */
}
.top_right{
  width: 20%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  /* background: red; */
  position: relative;
}
.camp_title{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  align-items: center;
  font-size: 36rpx;
  color: #000000;
  font-weight: 500;
  padding-top: 10rpx;
}
.camp_price{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 32rpx;
  color: #fe8711;
  font-weight: 500;
  align-items: baseline;
}
.price_tag{
  font-size:24rpx;
  font-weight: normal;
}
.tags{
  font-size:20rpx;
  font-weight: normal;
  color: #404040;
}
.top_right image{
  width: 40rpx;
  height: 36rpx;
}
.line{
  width: 1rpx;
  height: 60rpx;
  background: #eeeeee;
  position: absolute;
  left: 0;
}
.camp_intro_bottom{
  width: 680rpx;
  height: 280rpx;
  border: 1px solid #D7D7D7;
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  position: relative;
  flex-direction: column;
  padding-top: 14rpx;
  padding-left: 12rpx;
}
.course_info_tag{
  width: auto;
  height: 50rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  font-size: 36rpx;
  color: #2E2E2E;
  font-weight: 600;
  left: 60rpx;
  top: -25rpx;
  background: white;
}
.camp_info_item{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  padding: 6rpx 0;
  color: #2A2A2A;
}
.camp_info_item image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}
.content_title{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: #1F1F1F;
  font-weight: 600;
}
.content{
  width: 95%;
  height: auto;
  padding-bottom: 20rpx;
  margin: 0 auto;
  position: relative;
  /* text-indent: 2em; */
}