/* pages/myset/user/user.wxss */
@import '/icon/man.wxss';
@import '/icon/girl.wxss';
page{
  background-color: #eeeeee;
}
.container{
  font-family: Microsoft YaHei;
}
/* 管理员个人中心头部样式 */

.user_top_box{
  width: 100%;
  height: 340rpx;
  float: left;
  position: relative;
}

.user_top{
  width: 100%;
  height: 285rpx;
  background-size: 100% 100%;
  border-bottom-right-radius:80rpx;
  border-bottom-left-radius:80rpx;
  background: #FACC3C;
  float: left;
  /* background: url(https://s2.ax1x.com/2019/03/09/ASLUtx.png) no-repeat; */
  position: relative;
}
.user_headimg{
  width: 130rpx;
  height: 130rpx;
  float: left;
  position: relative;
  margin-top: 70rpx;
  border-radius: 75rpx;
  margin-left: 50rpx;
  box-sizing:border-box;
  border: 2px solid white;
}
.user_headimg image{
  width: 100%;
  height: 100%;
  position: relative;
  border-radius: 65rpx;
  box-sizing:border-box;
  /* border: 2px solid white; */
}
.user_info{
  width: 540rpx;
  height: 100rpx;
  float: left;
  position: relative;
  margin-left: 20rpx;
  margin-top: 84rpx;
  /* background: red; */
}

.use_info_top{
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}
.user_info_bot{
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: flex-end;
  justify-content: flex-start;
}
.userNick{
  width: auto;
  height: 100%;
  font-size: 30rpx;
  float: left;
  position: relative;
  color: white;
}
.usersex{
  width: 25rpx;
  height: 25rpx;
  display: flex;
  justify-content: center;
  /* background: green; */
  margin-bottom: 20rpx;
  margin-left: 4rpx;
}
.user_tags{
  width: auto;
  height: 28rpx;
  line-height: 28rpx;
  /* border: 1px solid white; */
  border-radius: 14rpx;
  text-align: center;
  font-size: 24rpx;
  color: white;
  padding: 0 10rpx;
}
 /* 第二个距左 */
.user_tags2{
  width: auto;
  height: 28rpx;
  line-height: 28rpx;
  border: 1px solid white;
  border-radius: 14rpx;
  text-align: center;
  font-size: 20rpx;
  color: white;
  margin-left: 12rpx;
  padding: 0 10rpx;
}
/* 个人喜欢 评价 样式 */
.base_info{
  width: 85%;
  height: 115rpx;
  background: white;
  border-radius: 30rpx;
  position: absolute;
  left: 0;right: 0;
  bottom: 0;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.base_info_child{
  width: 33%;
  height: 100%;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
}
.child_tags{
  font-size: 30rpx;
  color: #333333;
}
.child_num{
  font-size: 24rpx;
  color: #666666;
}
.base_info_line{
  height: 42rpx;
  width: 1px;
  background:#eeeeee;
  display: flex;
}
/* 个人中心 中间区域样式 */
.user_set_box{
  width: 95%;
  /* height: 460rpx; */
  height: auto;
  position: relative;
  margin: 0 auto;
  background: white;
  border-radius: 20rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #333333;
}
.set_box_line{
  width: 95%;
  height: 90rpx;
  /* float: left; */
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #eeeeee;
}
.set_icon{
  width: 56rpx;
  height: 56rpx;
  margin-left: 24rpx;
}
.set_icon image{
  width: 100%;
  height: 100%;
}
.set_sign{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  position: relative;
  width: auto;
}
.more{
  width: 14rpx;
  height: 22rpx;
  position: absolute;
  right:40rpx;
}